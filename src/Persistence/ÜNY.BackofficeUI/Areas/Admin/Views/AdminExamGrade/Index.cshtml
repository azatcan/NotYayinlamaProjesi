@using ÜNY.Application.DTOs
@model List<ExamDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<h2>Sınavlar</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.ExamName</td>
                <td>@exam.ExamDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a href="@Url.Action("ManageGrades", "AdminExamGrade", new { examId = exam.ExamId })" class="btn btn-primary">
                        Not Gir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


