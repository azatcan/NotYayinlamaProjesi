@model ÜNY.Application.DTOs.ContactİnformationDTO
@{
    ViewData["Title"] = "ContactUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İletişim Bilgilerini Güncelle</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">İletişim Bilgilerini Güncelle</h3>

                <form method="post" action="/Users/ContactUpdate">
                    <div class="form-group row mb-3">
                        <label for="email" class="col-lg-3 col-form-label text-right">E-posta</label>
                        <div class="col-lg-9">
                            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="phone" class="col-lg-3 col-form-label text-right">Telefon</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="phone" name="Phone" value="@Model.Phone" required>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="address" class="col-lg-3 col-form-label text-right">Adres</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="address" name="Addrees" value="@Model.Addrees" required>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col-lg-9 offset-lg-3">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

