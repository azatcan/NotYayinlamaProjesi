@model ÜNY.Application.DTOs.UserDTO
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Bilgileri</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-body pt-9 pb-0">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-12 col-sm-6">
                        <div class="form-group row mb-3">
                            <label class="col-lg-3 col-form-label text-end">E Mail</label>
                            <div class="col-lg-9">
                                <input name="kimlikNo" value="@Model.Email" disabled class="form-control form-control-lg form-control-solid">
                            </div>
                        </div>

                        <!-- Öğrenci Numarası -->
                        <div class="form-group row mb-3">
                            <label class="col-lg-3 col-form-label text-end">Phone</label>
                            <div class="col-lg-9">
                                <input name="ogrenciNo" value="@Model.Phone" disabled class="form-control form-control-lg form-control-solid">
                            </div>
                        </div>

                        <!-- Program -->
                        <div class="form-group row mb-3">
                            <label class="col-lg-3 col-form-label text-end">Adres</label>
                            <div class="col-lg-9">
                                <input name="programAdi" value="@Model.Addrees" disabled class="form-control form-control-lg form-control-solid">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 d-flex justify-content-end align-items-start">
                        <a href="/Users/ContactAdd" class="btn btn-primary btn-lg">Ekle</a>
                    </div>

                    <div class="col-12 col-sm-6 d-flex justify-content-end align-items-start">
                        <a href="/Users/ContactUpdate" class="btn btn-primary btn-lg">Güncelle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


