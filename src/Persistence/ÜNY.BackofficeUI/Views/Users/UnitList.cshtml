@model ÜNY.Application.DTOs.UserDTO
@{
    ViewData["Title"] = "UnitList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Bilgileri</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-body pt-9 pb-0">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-12 col-sm-6">
                        <div class="form-group row mb-2">
                            <label for="ogrenciNo" class="col-lg-3 col-form-label text-right">Öğrenci No</label>
                            <div class="col-lg-9">
                                <input id="ogrenciNo" name="Id" value="@Model.Id" disabled class="form-control form-control-lg form-control-solid">
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-12 col-sm-6">
                        <div class="form-group row mb-2">
                            <label for="fakulteAdi" class="col-lg-3 col-form-label text-right">Fakülte Adı</label>
                            <div class="col-lg-9">
                                <input id="fakulteAdi" name="FacultyName" value="@Model.FacultyName" disabled class="form-control form-control-lg form-control-solid">
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="birimAdi" class="col-lg-3 col-form-label text-right">Birim Adı</label>
                            <div class="col-lg-9">
                                <input id="birimAdi" name="UnitName" value="@Model.UnitName" disabled class="form-control form-control-lg form-control-solid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
