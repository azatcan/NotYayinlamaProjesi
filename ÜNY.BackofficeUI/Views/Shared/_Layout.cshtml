@inject IHttpContextAccessor HttpContextAccessor
﻿
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://use.fontawesome.com/releases/v6.1.0/css/all.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/style-responsive.css" rel="stylesheet">
</head>

<body>
    <!-- container section start -->
    <section id="container">

        <!-- Header -->
        <header class="header dark-bg">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center py-2">
                    <!-- Logo -->
                    <a href="/Home/Index" class="logo">Öğrenci <span class="lite">Paneli</span></a>

                    <!-- Navbar Links -->
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link px-3" style="color: white;" href="/Home/Index">Home</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserRoles") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" style="color: white;" href="/Admin/Admin/Index">Admin Paneli</a>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" style="color: white;" href="/Account/LogOut">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" style="color: white;" href="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </header>

        <!-- Sidebar -->
        <aside>
            <div id="sidebar" class="nav-collapse">
                <ul class="sidebar-menu">
                    <li><a href="/Admin/AdminAuthors/Index"><span>Yazarlar</span></a></li>
                    <li><a href="/Admin/AdminCategory/Index"><span>Kategoriler</span></a></li>
                    <li><a href="/Admin/AdminRole/Index"><span>Roller</span></a></li>
                    <li><a href="/Admin/AdminUser/Index"><span>Kullanıcılar</span></a></li>
                    <li><a href="/Admin/AdminComment/Index"><span>Yorumlar</span></a></li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
            </section>
        </section>
    </section>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/scripts.js"></script>
</body>

</html>