@model ÜNY.Domain.Entities.Users
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı İşlemleri</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-body pt-9 pb-0">
                <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
                    <!-- Profil Resmi -->
                    <div class="me-7 mb-4">
                        <div class="position-relative">
                            <img style="max-width: 200px;" alt="Profil Resmi"
                                 
                                  value="@Model.ImagePath" class="img-fluid rounded">
                                 
                        </div>
                    </div>

                    <!-- Kullanıcı Bilgileri -->
                    <div class="flex-grow-1">
                        <div class="d-flex flex-wrap flex-stack">
                            <div class="d-flex flex-column flex-grow-1">
                                <!-- Kullanıcı Bilgileri Form -->
                                <div class="row border border-gray-300 border-dashed rounded col-md-12 py-3 px-4 mb-3">
                                    <div class="col-md-12">
                                        <!-- Ad Soyad -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Ad Soyad</label>
                                            <div class="col-lg-9">
                                                <input name="adSoyad" value="@Model.Name + @Model.SurName" class="form-control form-control-lg form-control-solid">
                                                @Model.Name
                                            </div>
                                        </div>

                                        <!-- T.C. Kimlik No -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">T.C. Kimlik No</label>
                                            <div class="col-lg-9">
                                                <input name="kimlikNo" value="@Model.IdNumber" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>

                                        <!-- Öğrenci Numarası -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Öğrenci Numarası</label>
                                            <div class="col-lg-9">
                                                <input name="ogrenciNo" value="@Model.Id" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>

                                        <!-- Program -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Program</label>
                                            <div class="col-lg-9">
                                                <input name="programAdi" @* value="@Model.UnitId" *@ disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <hr>

                                <!-- Ek Bilgiler -->
                                <div class="row border border-gray-300 border-dashed rounded col-md-12 py-3 px-4">
                                    <div class="col-md-12">
                                        <!-- Doğum Tarihi -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Doğum Tarihi</label>
                                            <div class="col-lg-9">
                                                <input name="dogumTarihi" value="@Model.DateofBirth" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>

                                        <!-- Doğum Yeri -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Doğum Yeri</label>
                                            <div class="col-lg-9">
                                                <input name="dogumYeri" value="@Model.BirthPlace" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>

                                        <!-- Ana Adı -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Ana Adı</label>
                                            <div class="col-lg-9">
                                                <input name="anneAdi" value="@Model.MotherName" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>

                                        <!-- Baba Adı -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Baba Adı</label>
                                            <div class="col-lg-9">
                                                <input name="babaAdi" value="@Model.FatherName" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>

                                        <!-- Cinsiyet -->
                                        <div class="form-group row mb-3">
                                            <label class="col-lg-3 col-form-label text-end">Cinsiyet</label>
                                            <div class="col-lg-9">
                                                <input name="cinsiyet" value="@Model.GenderId" disabled class="form-control form-control-lg form-control-solid">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

