@model List<ÜNY.Domain.Entities.Users>
@{
    ViewData["Title"] = "list";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Doğum Yeri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr id="row-@user.Id">
                <td>@user.Name</td>
                <td>@user.SurName</td>
                <td>@user.UserName</td>
                <td>@user.BirthPlace</td>
                <td>
                    <button class="btn btn-success btn-sm" onclick="approveUser('@user.Id')">Onayla</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- AJAX JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function approveUser(userId) {
        if (!confirm("Bu kullanıcıyı onaylamak istediğinizden emin misiniz?")) {
            return;
        }

        $.ajax({
            url: 'http://localhost:5282/api/AdminPendingUser/Approveuser',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ UserId: userId }),
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    // Onaylanan kullanıcıyı tablodan kaldır
                    $("#row-" + userId).remove();
                } else {
                    alert(response.message);
                }
            },
            error: function (xhr, status, error) {
                 console.log("XHR:", xhr);
                 console.log("Status:", status);
                 console.log("Error:", error);
                alert("Bir hata oluştu: " + error);
            }
        });
    }
</script>